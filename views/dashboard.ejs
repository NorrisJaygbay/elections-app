    </header>
    <!-- for the header ends -->

    <!-- for the dashboard -->
    <section class="mainSection">
        <!-- for the list -->
        <aside>
            <ol>
                <li><a href="/dashboard"><div class="olCont"><i class="fa-solid fa-chart-line aside-ol-img"></i></div>Dashboard</a></li>
                <li><a href="/login"><div class="olCont"><i class="fa-solid fa-lock aside-ol-img"></i></div>Voters</a></li>
                <li><a href="#"><div class="olCont"><i class="fa-solid fa-table aside-ol-img"></i></div>Parties</a></li>
