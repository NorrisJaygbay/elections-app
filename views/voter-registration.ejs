<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voter Registration</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <link rel="stylesheet" href="/voter-registration.css">
</head>
<body>
    <div class="form-container">
        <h1>Voter Registration</h1>
        <form action="/register" method="POST" enctype="multipart/form-data">
            <div class="form-group form-group-first">
                <label for="photo">Photo</label>
                <div class="photo-control">
                    <img id="photo-preview" src="#" alt="Image Preview" style="display:none; width: 100%; margin-top: 10px;">
                    <p>photo</p>
                </div>
                <input type="file" id="photo" name="photo" accept="image/*">
            </div>
            <div class="form-group form-group-cont">
                <label for="first-name">First Name</label>
                <input type="text" placeholder="Enter first name" id="first-name" name="first_name">
            </div>
            <div class="form-group form-group-cont">
                <label for="middle-name">Middle Name</label>
                <input type="text" placeholder="Enter middle name (optional)" id="middle-name" name="middle_name">
            </div>
            <div class="form-group form-group-cont">
                <label for="last-name">Last Name</label>
                <input type="text" placeholder="Enter last name" id="last-name" name="last_name">
            </div>
            <div class="form-group form-group-cont">
                <label for="dob">Date of Birth</label>
                <input type="date" placeholder="Enter date of birth" id="dob" name="dob">
            </div>
            <div class="form-group form-group-cont">
                <label for="dob">Select Role</label>
                <select name="role" id="select-role">
                    <% row.forEach(role => { %>
                        <option value="<%= role.id %>"><%= role.role %></option>
                  <%  }); %>
                </select>
            </div>
            <div class="form-group form-group-cont">
                <label for="username">Username</label>
                <input type="text" placeholder="Enter username" id="username" name="username">
            </div>
            <div class="form-group form-group-cont">
                <label for="password">Password</label>
                <input type="password" placeholder="Enter password" id="password" name="password">
            </div>
            <!-- <div class="form-group form-group-cont">
                <label for="password">confirm Password</label>
                <input type="password" required placeholder="confirm password" id="confirm_password" name="confirmpassword">
            </div> -->
            <button type="submit">Register</button>
        </form>
    </div>


    <script src="/voter-registration.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>




